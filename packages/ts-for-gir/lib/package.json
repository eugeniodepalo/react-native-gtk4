{
    "name": "@ts-for-gir/lib",
    "version": "3.3.0",
    "description": "Typescript .d.ts generator from GIR for gjs and node-gtk",
    "module": "lib/index.js",
    "main": "lib/index.js",
    "type": "module",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "pnpm lint && pnpm build:ts",
        "build:ts": "tsc",
        "clear": "pnpm clear:build",
        "clear:build": "rimraf ./lib",
        "watch": "pnpm build:ts --watch",
        "lint": "eslint . --ext .ts,.tsx --fix",
        "update-package-descriptions": "wget https://raw.githubusercontent.com/vala-lang/valadoc-org/master/documentation/packages.xml"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gjsify/ts-for-gir.git"
    },
    "author": "Pascal Garber <pascal@artandcode.studio>",
    "files": [
        "lib"
    ],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/gjsify/ts-for-gir/issues"
    },
    "homepage": "https://github.com/gjsify/ts-for-gir#readme",
    "keywords": [
        "gjs",
        "typescript",
        "generate",
        "node-gtk",
        "gir",
        "gobject-introspection",
        "gnome",
        "gtk",
        "glib",
        "gobject",
        "dts",
        "type definitions"
    ],
    "devDependencies": {
        "@types/ejs": "3.1.5",
        "@types/lodash": "4.17.7",
        "@types/node": "22.5.0",
        "@typescript-eslint/eslint-plugin": "8.2.0",
        "@typescript-eslint/parser": "8.2.0",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.2.1",
        "prettier": "3.3.3",
        "rimraf": "6.0.1",
        "typescript": "5.5.4"
    },
    "dependencies": {
        "colorette": "2.0.20",
        "ejs": "3.1.10",
        "fast-xml-parser": "4.4.1",
        "lodash": "4.17.21"
    }
}
